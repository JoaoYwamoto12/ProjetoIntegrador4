<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescricaoPrimeiraTela">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="329dp"
        android:layout_height="226dp"
        android:fontFamily="@font/alata"
        android:text="Sobre nós A Associação de Proteção Aos Animais Miau Auau é uma organização social existente há 8 anos, formada por voluntários que tem por objetivo amenizar o sofrimento dos animais que vivem em situação de abandono e risco na cidade de Goiânia e imediações."
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="199dp"
        android:fontFamily="@font/adamina"
        android:text="Localização: Varanda da entrada principal do Shopping Cerrado - Avenida Anhanguera nº 10.790, no Setor Aeroviário, em Goiânia."
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/btnButtan"
        android:layout_width="153dp"
        android:layout_height="55dp"
        android:text="Saiba Mais"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>